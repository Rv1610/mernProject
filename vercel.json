{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/node",
        "config": { "zeroConfig": true }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": { "zeroConfig": true }
      }
    ],
    "routes": [
      {
        "src": "/submit-form",
        "dest": "backend/server.js"
      },
      {
        "src": "/api/.*",
        "dest": "backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ]
  }
  